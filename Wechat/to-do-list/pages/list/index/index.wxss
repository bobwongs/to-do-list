/**index.wxss**/
@import "../../../template/index-template.wxss"; 

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: center;
  justify-content: space-between; */
  /* padding: 200rpx 0; */
  box-sizing: border-box;
}

.input-container {
  height: 60px;
  padding-left: 12px;
  padding-right: 12px;
  background-color: rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
}

.input {
  height: 30px;
  background-color: white;
  align-self: center;
  margin-right: 4px;
}

.button {
  width: 60px;
  height: 35px;
  margin-left: 8px;
  align-self: center;
  font-size: 15px;  /* 待研究如何适配不同尺寸的屏幕 */
  background-color: #996633;
  color: white;
}

.list-container {
  display: flex;
  flex-direction: column;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
