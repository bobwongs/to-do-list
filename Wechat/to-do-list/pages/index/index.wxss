.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: center;
  justify-content: space-between; */
  /* padding: 200rpx 0; */
  box-sizing: border-box;
}

.input-container {
  display: flex;
  flex-direction: row;
}

.list-container {
  display: flex;
  flex-direction: column;
  background-color: orange;
}

.list-item {
  display: flex;
  flex-direction: row;
  background-color: yellow;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
